@model JobCart

<form method="post">
    <input asp-for="JobId" hidden/>
    <input asp-for="IsApplied" hidden/>
        <div class="card  container pt-4">
            <div class="card-header text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.Job.Category.Name</h1>
                    <p class="text-warning">by Author</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <h3 class="text-warning pt-2" style="height:30px;">Location <i class="bi bi-map"></i> : @Model.Job.JobLocation</h3>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="p-1 col-4">
                                    <div>Description <i class="bi bi-chat-dots"></i> :</div>
                                </h5>
                                <h5 class="p-1 col-6 border-bottom">
                                    <div>@Model.Job.Description</div>
                                </h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="p-1 col-4">
                                    <div>Budget <i class="bi bi-cash-stack" style="color:green"></i> :</div>
                                </h5>
                                <h5 class="p-1 col-6 border-bottom">
                                    <div>NOK @Model.Job.Budget</div>
                                </h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="p-1 col-4">
                                    <div>Date <i class="bi bi-calendar2-check"></i> :</div>
                                </h5>
                                <h5 class="p-1 col-6 border-bottom">
                                    <div>@Model.Job.Date.ToString("dd/MM/yyyy")</div>
                                </h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="p-1 col-4">
                                    <div>Time <i class="bi bi-watch"></i> :</div>
                                </h5>
                                <h5 class="p-1 col-6 border-bottom">
                                    <div>@Model.Job.Time.ToString("h:mm tt")</div>
                                </h5>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Job.Category.ImageUrl" width="50%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control" asp-action="Index" style="height:50px;">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">@(Model.IsApplied == true ? "Already Applied":"Apply")</button>
                    </div>
                </div>
            </div>
        </div>
</form>
