@model IEnumerable<Job>
<div class="col-12 pb-2" align="center">
    <h1 class="text">Available Jobs</h1>
    <hr />
</div>
<div class="row pb-3">
    @foreach (var job in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <div class="card-header text-light ml-0  row ">
                            <div class="col-12 text-center">
                                <h2 class="text-primary">@job.Category.Name</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 pt-4">
                                <img src="@job.Category.ImageUrl" class="card-img-top rounded"/>
                            </div>
                            <div class="col-6">
                                <div class="card-body">
                                    <div class="pl-1">
                                        <p class="card-title h5 text-primary">
                                            <i class="bi bi-geo-alt-fill" style="color:red"></i>
                                            @job.JobLocation
                                        </p>
                                        <p class="card-title text">
                                            <i class="bi bi-calendar-event"></i>
                                            @job.Date.ToString("dd/MM/yyyy")
                                        </p>
                                        <p class="card-title text">
                                            <i class="bi bi-clock" style="color:blue"></i>
                                            @job.Time.ToString("h:mm tt")
                                        </p>
                                        <p class="card-title h3 text-primary">
                                            <i class="bi bi-cash" style="color:green"></i>
                                            NOK @job.Budget
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    </div>
                    <br/>
                    <div class="column" align="center">
                        <a asp-action="Details"  class="btn btn-primary form-control" asp-route-jobId="@job.Id" style="width:150px">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>