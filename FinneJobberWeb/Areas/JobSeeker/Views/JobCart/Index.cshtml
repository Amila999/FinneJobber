@model FinneJobber.Models.ViewModels.JobCartVM
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<h3 align="center">Applied Jobs</h3>
					</div>
					<div class="col-6 text-end">
						<a asp-area="JobSeeker" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue to Apply Jobs</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ListJobCart)
				{
					<div class="row">
						<div class="d-none d-lg-block col-lg-1 text-center py-2"></div>
						<div class="col-12 col-lg-6 pt-md-3">
							<h5><strong>@item.Job.Description</strong></h5>
							<p><small>@item.Job.JobLocation</small></p>
						</div>
						<div class="col-12  col-lg-5 text-center row">
							<div class="col-6 text-md-right pt-4">
								<h6><strong>@item.Job.Date.ToString("dd/MM/yyyy") &nbsp&nbsp <i class="bi bi-watch"></i> @item.Job.Time.ToString("h:mm tt") </strong></h6>
							</div>
							<div class="col-6 col-sm-4 col-lg-6 pt-2">
								<div class="w-75 btn-group" role="group">
									<a asp-action="Details" asp-controller="Home" asp-route-jobId="@item.JobId" class="btn btn-primary">
										<i class="bi bi-info-circle"></i>
									</a> &nbsp;
									<a asp-action="Delete" asp-route-jobCartId="@item.Id" class="btn btn-warning">
										<i class="bi bi-trash3"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
					<div class="row text-md-right pt-2" align="center">
							<h6><strong><i class="bi bi-cash-coin" style="color:green"></i> NOK @item.Job.Budget</strong></h6>
						</div>
					<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (NOK)</span>
								<strong class="text-info">@Model.JobCartTotal</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
